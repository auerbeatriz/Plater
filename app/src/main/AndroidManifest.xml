<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.plater">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Plater">
        <activity android:name=".activities.RecipeBookActivity"></activity>
        <activity
            android:name=".activities.RecipeDisplayActivity"
            android:label=""
            android:parentActivityName=".activities.MainActivity"></activity>
        <activity
            android:name=".activities.ChangePasswordActivity"
            android:label="Alterar a senha"
            android:parentActivityName=".activities.ForgotPasswordActivity" />
        <activity
            android:name=".activities.VerifyCodeActivity"
            android:label="Esqueceu a senha?"
            android:parentActivityName=".activities.ForgotPasswordActivity" />
        <activity
            android:name=".activities.ForgotPasswordActivity"
            android:label="Esqueceu a senha?"
            android:parentActivityName=".activities.SigninActivity" />
        <activity
            android:name=".activities.SigninActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.SignupActivity" />
        <activity android:name=".activities.MainActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>